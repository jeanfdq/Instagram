<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.instagram.fragments.FragmentProfile">

    <LinearLayout
        android:id="@+id/lnl1_profile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42"
        android:orientation="horizontal"
        android:background="@color/colorWhite">

        <include android:id="@+id/profile_toolbar" layout="@layout/toolbar_profile"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/profile_logout"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:src="@drawable/round_power_settings_new_black_24"
            android:backgroundTint="@color/colorWhite"
            android:layout_weight="0.3"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/colorBlack"
        android:layout_below="@id/lnl1_profile"/>

</RelativeLayout>
